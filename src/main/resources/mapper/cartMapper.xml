<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.homerunball.cart.dao.CartMapper">

    <select id="count" resultType="int">
        select count(*) from cart;
    </select>
    
    <delete id="delete" parameterType="map">
        delete from cart where c_id = #{c_id} and pd_id = #{pd_id}
    </delete>

    <delete id="deleteAll">
        delete from cart
    </delete>
    
    <insert id="insert" parameterType="CartDto">
        insert into cart (c_id, pd_id, pd_clsf_code, cart_cnt)
        values (#{c_id}, #{pd_id}, #{pd_clsf_code}, #{cart_cnt})
    </insert>

    <sql id="selectCart">
        select c_id, pd_id, pd_clsf_code, cart_cnt
        from cart
    </sql>

    <select id="select" parameterType="string" resultType="CartDto">
        <include refid="selectCart"/>
        where c_id = #{c_id}
    </select>

    <select id="selectAll" resultType="CartDto">
        <include refid="selectCart"/>
        order by c_id = #{c_id} and frst_reg_dt = #{frst_reg_dt}
    </select>

    <update id="update" parameterType="CartDto">
        update cart
        set pd_id = #{pd_id}
        , pd_clsf_code = #{pd_clsf_code}
        , cart_cnt = #{cart_cnt}
        where c_id = #{c_id}
    </update>

</mapper>